<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_inc_sel">

    <TableLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:text="Id:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <LinearLayout
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edtAluCodi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:onClick="IncBusca"
                    android:src="@drawable/magnify"
                    android:text="Busca"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:onClick="IncCrea"
                    android:src="@drawable/account_plus"
                    android:text="Crea"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Grup (de incid):"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />
            <EditText
                android:id="@+id/edtIncGrup"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Alumne:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />
            <EditText
                android:id="@+id/edtIncAlumne"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patro Alumne"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curs:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/edtIncCurs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Patró curs (ex. 3A)"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professor:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/edtIncProfessor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Patró Professor"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutor:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/edtIncTutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Patró Professor"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcio:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <EditText
                android:id="@+id/edtIncDescripcio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Patró Descripcio"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data desde (incl.):"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <LinearLayout
                android:layout_width="220dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtIncDataDesde"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="date" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:onClick="IncBusca"
                    android:src="@drawable/tres_punts"
                    android:text="Calendari" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:onClick="IncBusca"
                    android:src="@drawable/trash_can_outline"
                    android:text="Esborra" />


            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data fins (incl.):"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <LinearLayout
                android:layout_width="220dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtIncDataFins"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="date" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:onClick="IncBusca"
                    android:src="@drawable/tres_punts"
                    android:text="Calendari" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:onClick="IncBusca"
                    android:src="@drawable/trash_can_outline"
                    android:text="Esborra" />


            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tancada:"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />
            <LinearLayout
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/chkIncSiTancada"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="Sí" />

                <CheckBox
                    android:id="@+id/chkIncNoTancada"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:checked="false"
                    android:text="No" />
            </LinearLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordre:"/>
            <RadioGroup
                android:id="@+id/grpOrdre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data " />

                <RadioButton
                    android:id="@+id/radDataInv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Inv." />

                <RadioButton
                    android:id="@+id/radDataCurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Curs" />
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Format Dates:"
                android:textAppearance="@android:style/TextAppearance.Material.Small"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yy-MM-dd"
                android:textAppearance="@android:style/TextAppearance.Material.Small"/>
        </TableRow>


    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
    </LinearLayout>


</LinearLayout>