<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            <TextView
                android:id="@+id/txtRep1h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="0"/>

            <CheckBox
                android:id="@+id/chkRep1h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Repàs 1 hora"/>
        </TableRow>
        <TableRow>
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            <TextView
                android:id="@+id/txtRep1d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="0"/>

            <CheckBox
                android:id="@+id/chkRep1d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Repàs 1 dia"/>
        </TableRow>
        <TableRow>
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            <TextView
                android:id="@+id/txtRep1s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <CheckBox
                android:id="@+id/chkRep1s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Repàs 1 setmana"/>
        </TableRow>
        <TableRow>
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            <TextView
                android:id="@+id/txtRep1m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <CheckBox
                android:id="@+id/chkRep1m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Repàs 1 mes"/>
        </TableRow>
        <TableRow>
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            <TextView
                android:id="@+id/txtRep6m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <CheckBox
                android:id="@+id/chkRep6m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Repàs 6 mesos"/>
        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/cmdRepassar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:onClick="GoToExamenRepas"
        android:src="@drawable/check_bold"
        android:text="Repassar" />


</LinearLayout>