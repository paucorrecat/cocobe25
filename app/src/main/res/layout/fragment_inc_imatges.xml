<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frg_inc_imatges">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgImatges"
            android:layout_width="340dp"
            android:layout_height="331dp"
            android:src="@mipmap/ic_launcher"
            android:clickable="true"
            android:focusable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cmdIncAntFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_circle_outline"
                android:text="Ant" />

            <ImageButton
                android:id="@+id/cmdIncSegFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_circle_outline"
                android:text=">" />

            <ImageButton
                android:id="@+id/cmdIncAddFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/plus_circle_outline"
                android:text="+" />
            <ImageButton
                android:id="@+id/cmdIncEliFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_circle_outline"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>